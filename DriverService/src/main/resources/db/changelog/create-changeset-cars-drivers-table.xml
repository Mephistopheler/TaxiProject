<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-cars-table" author="ivan">
        <createTable tableName="cars">
            <column name="plate_number" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="brand" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE cars
                ADD CONSTRAINT chk_cars_plate_number_format
                    CHECK (plate_number ~ '^[0-9]{4} [A-Z]{2}-[1-7]$');
        </sql>
    </changeSet>

    <changeSet id="create-drivers-table" author="ivan">
        <createTable tableName="drivers">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="VARCHAR(100)"/>
            <column name="car_plate_number" type="VARCHAR(20)">
                <constraints unique="true"/>
            </column>
            <column name="deleted" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="drivers"
                baseColumnNames="car_plate_number"
                constraintName="fk_drivers_car"
                referencedTableName="cars"
                referencedColumnNames="plate_number"/>
    </changeSet>

</databaseChangeLog>